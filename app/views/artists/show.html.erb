<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @artist.name %>
</p>

<p>
  <b>Image:</b>
  <img src="<%= @artist.image %>" alt="artist image">
</p>

<p>
  <b>Bio:</b>
  <%= @artist.bio %>
</p>

<p>
  <b>Films:</b>
  <%= @artist.bio %>
</p>

<div id="Films">
  <h2><%= pluralize @artist.movies.size, "Film" %></h2>

  <% @artist.movies.each do |movie| %>
    <div class="Film">
      <div class="content"><%= movie.name %></div>
    </div>
  <% end %>
</div>


<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>
